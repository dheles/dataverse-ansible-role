[Unit]
Description = GlassFish Server v4.1 (modified for Dataverse 4)
After = syslog.target network.target

[Service]
ExecStart =  /usr/bin/java -jar {{ dv_gf_root }}/glassfish/lib/client/appserver-cli.jar start-domain
ExecStop =   /usr/bin/java -jar {{ dv_gf_root }}/glassfish/lib/client/appserver-cli.jar stop-domain
ExecReload = /usr/bin/java -jar {{ dv_gf_root }}/glassfish/lib/client/appserver-cli.jar restart-domain
Type = forking
TimeoutSec = {{ dv_gf_wait_secs }}

User={{ dv_gf_user }}
Group={{ dv_gf_group }}

[Install]
WantedBy = multi-user.target
